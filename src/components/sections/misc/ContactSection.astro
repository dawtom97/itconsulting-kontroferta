---
// Importowanie niezbędnych zależności.
import AuthBtn from "@components/ui/buttons/AuthBtn.astro";
import ContactIconBlock from "@components/ui/blocks/ContactIconBlock.astro";
import TextInput from "@components/ui/forms/input/TextInput.astro";
import EmailContactInput from "@components/ui/forms/input/EmailContactInput.astro";
import PhoneInput from "@components/ui/forms/input/PhoneInput.astro";
import TextAreaInput from "@components/ui/forms/input/TextAreaInput.astro";
import Icon from "@components/ui/icons/Icon.astro";

// Definiowanie zmiennych, które będą używane w tym komponencie
const title: string = "Skontaktuj się z nami";
const subTitle: string =
  "Masz pytania lub chcesz omówić projekt? Skontaktuj się z nami, a wspólnie stworzymy idealne rozwiązanie za pomocą naszych narzędzi i usług.";
const formTitle: string = "Wypełnij poniższy formularz";
const formSubTitle: string = "Odpowiemy w ciągu 1-2 dni roboczych.";
---
<!-- Kontakt -->
<section class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14">
  <div class="mx-auto max-w-2xl lg:max-w-5xl">
    <div class="text-center">
      <h1
        class="text-balance text-2xl font-bold tracking-tight text-neutral-800 dark:text-neutral-200 md:text-4xl md:leading-tight"
      >
        {title}
      </h1>
      <p class="mt-1 text-pretty text-neutral-600 dark:text-neutral-400">
        {subTitle}
      </p>
    </div>

    <div class="mt-12 grid items-center gap-6 lg:grid-cols-2 lg:gap-16">
      <div class="flex flex-col rounded-xl p-4 sm:p-6 lg:p-8">
        <h2
          class="mb-8 text-xl font-bold text-neutral-700 dark:text-neutral-300"
        >
          {formTitle}
        </h2>
        <!-- Formularz z różnymi polami do wprowadzania danych.-->
        <!-- Każde pole korzysta z różnych komponentów input do określonego typu danych (tekst, email, telefon, textarea).-->
        <form>
          <div class="grid gap-4">
            <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
              <TextInput
                id="hs-firstname-contacts"
                label="Imię"
                name="hs-firstname-contacts"
              />
              <TextInput
                id="hs-lastname-contacts"
                label="Nazwisko"
                name="hs-lastname-contacts"
              />
            </div>
            <EmailContactInput id="hs-email-contacts" />
            <PhoneInput id="hs-phone-number" />
            <TextAreaInput
              id="hs-about-contacts"
              label="Szczegóły"
              name="hs-about-contacts"
            />
          </div>

          <div class="mt-4 grid">
            <AuthBtn title="Wyślij wiadomość" />
          </div>

          <div class="mt-3 text-center">
            <p class="text-sm text-neutral-600 dark:text-neutral-400">
              {formSubTitle}
            </p>
          </div>
        </form>
      </div>

      <!--Blok ContactIconBlock służy do prezentacji różnych metod kontaktu, w tym wizyty w biurze, email, przeglądania bazy wiedzy i FAQ.-->
      <div class="divide-y divide-neutral-300 dark:divide-neutral-700">
        <ContactIconBlock
          heading="Baza wiedzy"
          content="Przeglądaj wszystkie artykuły z naszej bazy wiedzy."
          isLinkVisible={true}
          linkTitle="Odwiedź przewodniki i samouczki"
          linkURL="#"
          isArrowVisible={true}
          ><Icon name="question" />
        </ContactIconBlock>

        <ContactIconBlock
          heading="FAQ"
          content="Zapoznaj się z naszym FAQ, aby uzyskać szybkie i jasne odpowiedzi na często zadawane pytania."
          isLinkVisible={true}
          linkTitle="Odwiedź FAQ"
          linkURL="#"
          isArrowVisible={true}
          ><Icon name="chatBubble" />
        </ContactIconBlock>

        <!-- <ContactIconBlock
          heading="Odwiedź nasze biuro"
          content="Polska LMSProjekt"
          isAddressVisible={true}
          addressContent="ul. Morska 102, 80-225 Gdańsk"
          ><Icon name="mapPin" />
        </ContactIconBlock> -->

        <ContactIconBlock
          heading="Skontaktuj się z nami przez email"
          content="Preferujesz pisemną formę? Napisz do nas email na adres"
          isLinkVisible={true}
          linkTitle="kontakt@itconsulting.pl"
          linkURL="#"
          ><Icon name="envelopeOpen" />
        </ContactIconBlock>
      </div>
    </div>
  </div>
</section>
