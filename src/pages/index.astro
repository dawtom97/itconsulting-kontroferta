---
// Import the necessary components
// Importowanie niezbędnych komponentów
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import ClientsSection from "@components/sections/landing/ClientsSection.astro";
import FeaturesGeneralHome from "@components/sections/features/FeaturesGeneralHome.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import TestimonialsSection from "@components/sections/testimonials/TestimonialsSection.astro";
import PricingSection from "@components/sections/pricing/PricingSection.astro";
import FAQ from "@components/sections/misc/FAQ.astro";
import heroImage from "@images/hero_home.avif";
import faqs_home from "@data/faqs_home.json";
import features_home from "@data/features_home.json";
import pricing from "@data/pricing.json";
import featureImage from "@images/features-image.avif";
import construction from "@images/roz2.avif";
import tools from "@images/roz1.avif";
import dashboard from "@images/dashboard-image.avif";

const avatarSrcs: Array<string> = [
  "https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1531927557220-a9e23c1e4794?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1541101767792-f9b2b1c4f127?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&&auto=format&fit=facearea&facepad=3&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1492562080023-ab3db95bfbce?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
];
---

<MainLayout>
  <HeroSection
    title=`Ulepsz swój biznes z <span
        class="text-yellow-500 dark:text-yellow-400">IT Consulting</span>`
    subTitle="Oferujemy innowacyjne rozwiązania z zakresu LMS i zarządzania firmą"
    primaryBtn="Nasze produkty"
    primaryBtnURL="/inne"
    secondaryBtn="Skontaktuj się z nami"
    secondaryBtnURL="/contact"
    withReview={true}
    avatars={avatarSrcs}
    rating=`<span class="font-bold">4.9</span> / 5`
    starCount={5}
    reviews=`Na podstawie ponad <span class="font-bold">1k</span> recenzji`
    src={heroImage}
    alt="Zdjęcie studentów korzystających z aplikacji LMSProjekt"
  />

  <FeaturesGeneralHome
    title="Przełamujemy Bariery Technologiczne"
    subTitle="W IT Consulting stawiamy czoła wyzwaniom technologicznym, oferując innowacyjne rozwiązania i wsparcie naszych ekspertów. Jesteśmy tu, aby pomóc Ci realizować cele technologiczne."
    src={featureImage}
    alt="Graficzne przedstawienie funkcji systemu IT Consulting"
    features={features_home}
  />
  <FeaturesNavs
    title=`Dostosuj ofertę <span class="text-yellow-500 dark:text-yellow-400">IT Consulting</span> do swoich potrzeb technologicznych.`
    tabs={[
      {
        heading: "Rozwiązania Infrastrukturalne",
        content:
          "Modernizuj swoją infrastrukturę IT z zaawansowanymi rozwiązaniami od IT Consulting. Zwiększaj wydajność i skalowalność twoich systemów z naszą pomocą.",
        svg: "infrastructure",
        src: tools,
        alt: "Zdjęcie serwerowni z nowoczesnymi serwerami",
        first: true,
      },
      {
        heading: "Bezpieczeństwo Cybernetyczne",
        content:
          "Zabezpiecz swoje dane i systemy dzięki kompleksowym rozwiązaniom w zakresie cyberbezpieczeństwa. Nasze narzędzia i usługi pomogą ci chronić przed zagrożeniami.",
        svg: "security",
        src: dashboard,
        alt: "Graficzne przedstawienie zabezpieczeń cybernetycznych",
        second: true,
      },
      {
        heading: "Rozwiązania Chmurowe",
        content:
          "Wykorzystaj potencjał technologii chmurowych dzięki naszym dostosowanym rozwiązaniom. Ułatwiamy migrację, zarządzanie i skalowanie w chmurze.",
        svg: "cloud",
        src: construction,
        alt: "Zdjęcie zespołu IT pracującego nad wdrożeniem rozwiązań chmurowych",
      },
    ]}
  />

  <TestimonialsSection
    title="Przyspiesz Swoje Inicjatywy IT"
    subTitle="Z IT Consulting szybko wdrożysz rozwiązania IT dzięki natychmiastowej konfiguracji usług. Odkryj nową efektywność w realizacji projektów technologicznych."
    testimonials={[
      {
        content:
          "Dzięki IT Consulting znacząco poprawiliśmy wydajność naszych systemów IT. Szybka implementacja i elastyczność w odpowiedzi na nasze potrzeby są imponujące. To prawdziwa zmiana w podejściu do technologii!",
        author: "Karolina Nowak",
        role: "Dyrektor ds. Technologii | TechSolutions Sp. z o.o.",
        avatarSrc:
          "https://images.unsplash.com/photo-1593104547489-5cfb3839a3b5?q=80&w=1453&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90oy1wYWdlfHx8fGVufDB8fHx8fA%3D%3D8&auto=format&fit=facearea&facepad=2&w=320&h=320&q=80",
      },
    ]}
    statistics={[
      {
        count: "1k+",
        description: "użytkowników od start-upów po duże korporacje",
      },
      {
        count: "55%",
        description:
          "wzrost wydajności operacyjnej dzięki naszym rozwiązaniom IT",
      },
      {
        count: "22%",
        description:
          "redukcja kosztów operacyjnych zgłaszana przez stałych klientów",
      },
      {
        count: "3x",
        description:
          "szybsze wdrożenie technologiczne dzięki naszym innowacyjnym usługom",
      },
    ]}
  />

  <FAQ title="Najczęściej<br />zadawane pytania" faqs={faqs_home} />
</MainLayout>
